{
  "name": "kata",
  "version": "0.0.0",
  "description": "Coding kata in TypeScript",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write",
    "lint": "eslint ./**/*.ts",
    "lint:fix": "eslint --cache --fix",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bybrunobarros/kata.git"
  },
  "author": "Bruno Barros",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/bybrunobarros/kata/issues"
  },
  "homepage": "https://github.com/bybrunobarros/kata#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "ava": "^3.12.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": ">=14"
  },
  "type": "module",
  "prettier": {
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.ts",
        "options": {
          "parser": "typescript"
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": ["npm run lint:fix", "npm run format"]
  }
}
